@using PersonalSite;
@model BlogItem

@{
    ViewData["Title"] = "Details";
}

<div class="container" style=" height:75dvh; display: inline; overflow-y: auto">

    <h1>Details</h1>

    <div>
        <h4>SkillItem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortInfo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortInfo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dd class="col-sm-10">
            </dd>
        </dl>
        <hr />

        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Text)
            </div>
            <div class="col-sm-10">
                <p >
                    @Model.Text
                </p>
            </div>
        </div>
    </div>
    <div class="button-group mt-3" role="group">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-secondary">
            <i class="bi bi-pencil-square"></i>
            @Texts.DlgEdit
        </a>
        <a asp-action="Index" class="btn btn-light ma-2 border-2 border">
            <i class="bi bi-card-list"></i>
            @Texts.DlgBacktoList
        </a>
    </div>
</div>