@using PersonalSite;
@model BlogItem


@{
    ViewData["Title"] = "Delete";
}
<div class="container" style=" height:75dvh; display: inline; overflow-y: auto">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>SkillItem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortInfo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortInfo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="@Texts.DlgDelete" class="btn btn-danger border-2 border" />
            <a asp-action="Index" class="btn btn-light ms-2 border-2 border">
                <i class="bi bi-card-list"></i>
                @Texts.DlgBacktoList
            </a>
        </form>
    </div>
</div>