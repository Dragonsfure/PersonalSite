<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonalSite</title>

    @* The Icons needed for the Buttons and such *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    @* The Css-Styles *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/Custom.css")" />

    @* The FavIcon *@
    <link rel="shortcut icon" href="~/favicon.ico" />
    @RenderSection("Css", false)
</head>

<body>
    <div class="wrapper">
        <header class="page-header" id="header">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container justify-content-center d-sm-none ">
                    <a class="navbar-brand fs-3 " asp-area="" asp-controller="Home" asp-action="Index">@Texts.DlgDragonSite</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse text-center">
                    <div class="row container-fluid">
                        <div class=" col-3 ">
                        </div>
                        <div class="col-6 d-flex justify-content-center text-center">

                            <ul class="navbar-nav ">
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-4" asp-area="" asp-controller="Home" asp-action="Index">@Texts.DlgHomeLink</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-4" asp-area="" asp-controller="Home" asp-action="Privacy">@Texts.DlgPrivacyLink</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-4" asp-area="" asp-controller="Home" asp-action="Skills">@Texts.DlgSkillLink</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-4" asp-area="" asp-controller="Home" asp-action="Blogs">@Texts.DlgBlogLink</a>
                                </li>
                            </ul>
                        </div>
                        <div class=" col-3">
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="page-body" id="mainBody">
            @RenderBody()
        </div>

        <footer class="border-top text-center bg-white text-muted border-top" id="footer">
            <div class="container my-4">
                &copy; 2023 - @Texts.DlgDragonSite - <a asp-area="" asp-controller="Home"
                                                        asp-action="Privacy">@Texts.DlgPrivacyLink</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        function resize() {
            var x = $('body').height() - $('#header').height() - $('#footer').height() - 1;
            $('#mainBody').height(0).height(x);
        }
        resize();

        $(window).on("resize", function () {
            resize();
        });
    </script>
</body>
</html>
