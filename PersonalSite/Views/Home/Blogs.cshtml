@model BlogsVm

@{
    ViewData["Title"] = "Skill Page";
}

<div class="row h-75 w-50 my-3 mx-1 table-responsive" id="tableHeightDiv">
    <div col-lg-12 p-0>
        <table class=" table tableBlogs Table" id="labelTable">
            <thead>
                <tr class="text-center">
                    <th class="defaultHeader bg-white">
                        <div class="row text-center" id="hueber">
                            <h2>@Texts.DlgBlogList</h2>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="mytable">
                @foreach (BlogDummy blog in Model.BlogItems) {
                    <tr>
                        <td>
                            <a class="single bloga" asp-action="@nameof(HomeController.DetailBlog)" asp-controller="@HomeController.Name" asp-route-id="@blog.Id">
                                <h3 class="title">@blog.Name</h3>
                                <p class="snippet">@blog.Description</p>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        function fixTable() {
            var x = $('#cont').height() - $('#hueber').height() - 1;
            $('#myCont').height(x);
        }
        fixTable();

        $(window).on("resize", function () {
            fixTable();
        });
    </script>
}